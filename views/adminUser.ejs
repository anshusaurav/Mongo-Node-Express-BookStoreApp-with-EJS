<%- include('partials/header') -%>
   
   <section class="admin-book-container">
    <div class='admin-header-container'>
      <a class='admin-header-anchor' href='/admin/book/add'>Add Book</a>
      <a class='admin-header-anchor' href='/admin/category/add'>Add Category</a>
      <a class='admin-header-anchor' href='/admin/book'>Manage Book</a>
      <a class='admin-header-anchor underline' href='/admin/user'>Manage User</a>
    </div>
    <h2 class='admin-book-header'>All Users</h2>
    <table role="table" class="table">
      <thead role="rowgroup">
        <tr role="row">
          <th role="columnheader">Name</th>
          <th role="columnheader">Email</th>
          <th role="columnheader">Block/Unblock</th>
          
        </tr>
      </thead>
      <tbody role="rowgroup">
        <% users.forEach(user => { %> 
            <tr role="row">
            <td role="cell" data-title="Title"><p class='flex-admin-basic'><%=user.name %></p></td>
            <td role="cell" data-title="Author"><p class='flex-admin-basic'><%=user.email %></p></td>
            <td role="cell" data-title="Delete">
                <%if(user.isBlocked) {%>
                <a class='unblock-green' href='/admin/unblock/<%=user.id %>'>
                    Unblock
                </a>
            <% } else {%>
                <a class='block-red' href='/admin/block/<%=user.id %>'>
                    Block
                </a>
            <%}%>
                </td>
            </tr>
        <%})%>
      </tbody>
    </table>
  </section>
<%- include('partials/footer') -%>
